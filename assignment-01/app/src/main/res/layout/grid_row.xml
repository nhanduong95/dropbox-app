<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="210dp"
    android:padding="@dimen/grid_padding_size"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/grid_item_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/thumbnail_icon_size"
        android:textColor="@android:color/darker_gray"
        android:background="@color/lighterBlue"/>

    <ImageView
        android:id="@+id/grid_item_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumbnail_img_size"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="4dp"
        android:background="@color/lighterBlue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_caption_size"
        android:orientation="horizontal"
        android:background="@color/mediumBlue">
        <TextView
            android:id="@+id/grid_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/icon_setting"
            android:textColor="@color/nearlyWhite"
            android:background="@color/darkerMediumBlue"
            android:textSize="@dimen/cog_size"
            android:padding="7dp"/>
        <TextView
            android:id="@+id/grid_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/nearlyWhite"
            android:textSize="@dimen/grid_item_name_size"
            android:typeface="monospace"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>